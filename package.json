{
  "name": "react-htx",
  "version": "1.0.17",
  "description": "Use HTML on the server to compose your react application.",
  "license": "MIT",
  "author": "Franz Mayr-Wilding",
  "repository": {
    "type": "git",
    "url": "https://github.com/franzwilding/react-htx"
  },
  "bugs": {
    "url": "https://github.com/franzwilding/react-htx/issues"
  },
  "homepage": "https://github.com/franzwilding/react-htx",
  "type": "module",
  "keywords": [
    "react",
    "ssr"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli/generate-web-types": {
      "require": "./cli/generate-web-types.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "generate-web-types": "./dist/cli/generate-web-types.cjs"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist dist-webpack types",
    "build": "npm run clean && npm run build:rollup",
    "build:rollup": "rollup -c",
    "typecheck": "tsc --noEmit",
    "build:release": "npm install && npm ci --dev && npm run typecheck && npm test -- --run && npm run build --if-present",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@react-types/shared": "^3.32.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rollup": "^4.57.1",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
