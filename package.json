{
  "name": "react-htx",
  "version": "1.0.11",
  "description": "Use HTML on the server to compose your react application.",
  "license": "MIT",
  "author": "Franz Mayr-Wilding",
  "repository": {
    "type": "git",
    "url": "https://github.com/franzwilding/react-htx"
  },
  "bugs": {
    "url": "https://github.com/franzwilding/react-htx/issues"
  },
  "homepage": "https://github.com/franzwilding/react-htx",
  "type": "module",
  "keywords": [
    "react",
    "ssr"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli/generate-web-types": {
      "require": "./cli/generate-web-types.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "generate-web-types": "./dist/cli/generate-web-types.cjs"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist dist-webpack types",
    "build": "npm run clean && npm run build:rollup",
    "build:rollup": "rollup -c",
    "typecheck": "tsc --noEmit",
    "build:release": "npm install && npm ci --dev && npm run typecheck && npm test -- --run && npm run build --if-present",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@react-types/shared": "^3.31.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-loader": "^9.5.0",
    "ts-morph": "^26.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
