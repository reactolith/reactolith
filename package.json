{
  "name": "react-htx",
  "version": "1.0.3",
  "description": "Use HTML on the server to compose your react application.",
  "license": "MIT",
  "author": "Franz Mayr-Wilding",
  "repository": {
    "type": "git",
    "url": "https://github.com/franzwilding/react-htx"
  },
  "bugs": {
    "url": "https://github.com/franzwilding/react-htx/issues"
  },
  "homepage": "https://github.com/franzwilding/react-htx",
  "type": "module",
  "keywords": [
    "react",
    "ssr"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./App": {
      "types": "./dist/App.d.ts",
      "import": "./dist/App.mjs",
      "require": "./dist/App.cjs"
    },
    "./Router": {
      "types": "./dist/Router.d.ts",
      "import": "./dist/Router.mjs",
      "require": "./dist/Router.cjs"
    },
    "./HtxComponent": {
      "types": "./dist/HtxComponent.d.ts",
      "import": "./dist/HtxComponent.mjs",
      "require": "./dist/HtxComponent.cjs"
    },
    "./RootComponent": {
      "types": "./dist/RootComponent.d.ts",
      "import": "./dist/RootComponent.mjs",
      "require": "./dist/RootComponent.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist dist-webpack types",
    "build": "npm run clean && npm run build:rollup",
    "build:rollup": "rollup -c",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@react-types/shared": "^3.31.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
